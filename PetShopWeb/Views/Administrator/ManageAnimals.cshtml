@model IEnumerable<PetShopWeb.Models.Animal>

<script src="~/scripts/adminCategorySelect.js"></script>

<div class="container">
    <div class="row justify-content-md-center">

        <partial name="_CategorySelectPartial" />

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Age</th>
                    <th scope="col">Description</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var animal in Model)
                {
                    <tr>
                        <td class="w-25"><img asp-append-version="true" src="@animal.ImagePath" class="img-fluid img-thumbnail" /></td>
                        <td>@animal.Name</td>
                        <td>@animal.Age</td>
                        <td>@animal.Description</td>
                        <td>
                            <div class="btn-toolbar" style="padding-bottom: 5px">
                                <a class="btn btn-warning btn-sm mb-1" asp-action="Edit" asp-route-id="@animal.Id">Edit</a>
                                <a class="btn btn-danger btn-sm mt-1" asp-action="Delete" asp-route-id="@animal.Id"
                               onclick="return confirm('Are you sure you want to delete this animal?');">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
