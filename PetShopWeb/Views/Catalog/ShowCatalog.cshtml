@model IEnumerable<PetShopWeb.Models.Animal>
<script src="~/scripts/categorySelect.js"></script>

<div class="container">
    <div class="row justify-content-md-center">

        <div class="input-group mb-3">
            <select class="form-select-sm" id="catSelect">
                <option>Choose a catagory</option>
                <option value="0">All</option>
                @foreach (var category in ViewBag.Categories)
                {
                    <option name="categoryId" value="@category.Id">@category.Name</option>
                }
            </select>

        </div>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Potrait</th>
                    <th scope="col">Name</th>
                    <th scope="col">More info</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var animal in Model)
                {
                    <tr>
                        <td>Picture</td>
                        <td>@animal.Name</td>
                        <td>
                            <a class="btn btn-outline-info"
                           asp-controller="AnimalDetails" asp-action="AnimalDetails" asp-route-animalId="@animal.Id">More Information</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>