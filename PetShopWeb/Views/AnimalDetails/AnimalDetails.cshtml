@using PetShopWeb.Models
@model Animal

<link rel="stylesheet" href="~/styles/scrollTable.css" />

<h3 class="text-center">@Model.Name</h3>

<div class="container">
    <div class="row">
        <div class="col-8 border border-primary">
            <table class="table">
                <tbody>
                    <tr>
                        <th scope="row" class="col-2">Age</th>
                        <td class="col-10">@Model.Age</td>
                    </tr>
                    <tr>
                        <th scope="row" class="col-2">Description</th>
                        <td class="col-10">@Model.Description</td>
                    </tr>
                    <tr>
                        <th scope="row" class="col-2">Category</th>
                        <td class="col-10">@Model.Category!.Name</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="col-4 border border-primary table-wrapper-scroll-y my-custom-scrollbar">
            <table class="table table-bordered table-striped mb-0">
                <thead>
                    <tr>
                        <th>Comments</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var comment in Model.Comments!)
                    {
                        <tr>
                            <td>@comment.CommentText</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div>
        </div>
    </div>
    <form method="post" asp-action="AddNewComment" asp-route-animalId="@Model.Id">
        <div class="row justify-content-end">
            <div class="col-4">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Write comment</span>
                    </div>
                    <textarea name="commentText" class="form-control" aria-label="new comment"></textarea>
                </div>
            </div>
            <span asp-validation-for="Comments!.First().CommentText" class="text-danger"></span>
        </div>
        <div class="row justify-content-end">
            <div class="col-1">
                <button type="submit" class="btn btn-primary mt-2">Submit</button>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
                }